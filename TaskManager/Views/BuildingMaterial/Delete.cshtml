@model TaskManager.Models.BuildingMaterialModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Usuwanie materiału</h1>

<h3>Jesteś pewien że chcesz usunąć ten materiał ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Symbol)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Symbol)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ThermalConductivitySW)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ThermalConductivitySW)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ThermalConductivityW)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ThermalConductivityW)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Density)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Density)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpecificHeat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SpecificHeat)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Usuń" class="btn btn-danger" />
        <a class="btn btn-dark" asp-action="Index">Wróć do listy materiałów</a>
    </form>
</div>
