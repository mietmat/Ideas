@model IEnumerable<TaskManager.Models.EmployeeModel>

@{
    ViewData["Title"] = "Index";
}

<h1 class="display-4">Lista pracowników</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Dodaj pracownika</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearsOfExperience)
            </th>

            <th></th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width:3%">
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td style="width:10%">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td style="width:10%">
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td style="width:3%">
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td style="width:20%">
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td style="width:5%">
                    @Html.DisplayFor(modelItem => item.YearsOfExperience)
                </td>

                <td style="width:30%">
                    @Html.ActionLink("Gotowe", "Done", new {  id=item.Id  }, new {@class = "btn btn-success"})
                    @Html.ActionLink("Szczegóły", "Details", new {  id=item.Id }, new {@class = "btn btn-info"})
                    @Html.ActionLink("Edytuj", "Edit", new {  id=item.Id }, new {@class = "btn btn-warning"})
                    @Html.ActionLink("Usuń", "Delete", new { id=item.Id }, new {@class = "btn btn-danger"})
                </td>
            </tr>
        }
    </tbody>
</table>
